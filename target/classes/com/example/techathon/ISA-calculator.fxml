<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="app.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.techathon.CalculatorController">
    <top>
        <Pane fx:id="header" BorderPane.alignment="CENTER" styleClass="nav-pane">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onHelloButtonClick"
                                styleClass="menu-btn" text="Home"/>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onLearnButtonClick"
                                styleClass="menu-btn" text="Learn"/>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onQuizButtonClick"
                                styleClass="menu-btn" text="Quiz"/>
                        <Button mnemonicParsing="false" onAction="#onCalculatorButtonClick" styleClass="menu-btn"
                                text="Calculators"/>
                        <Button mnemonicParsing="false" text="Notes" styleClass="menu-btn" alignment="CENTER"
                                onAction="#onNotesButtonClick"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
            </children>
        </Pane>
    </top>
    <center>
      <VBox alignment="CENTER" fillWidth="false" BorderPane.alignment="CENTER">
         <children>
            <Label text="ISA Calculator">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <Label text="How much would you like to invest each year?" />
            <TextField VBox.vgrow="NEVER" />
            <Slider maxWidth="200.0" />
            <Region prefHeight="23.0" prefWidth="275.0" />
            <Label text="Expected Growth Rate" />
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <CheckBox mnemonicParsing="false" text="2%" />
                  <CheckBox mnemonicParsing="false" text="5%" />
                  <CheckBox mnemonicParsing="false" text="8%" />
               </children>
            </HBox>
            <Region layoutX="10.0" layoutY="73.0" prefHeight="23.0" prefWidth="275.0" />
            <Button mnemonicParsing="false" text="Update Result" />
            <Region layoutX="10.0" layoutY="130.0" prefHeight="23.0" prefWidth="275.0" />
            <HBox alignment="CENTER" layoutX="61.0" layoutY="138.0" spacing="30.0" style="-fx-background-color: green;">
               <children>
                  <Label text="Result" textFill="WHITE">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Label>
                  <Label layoutX="10.0" layoutY="10.0" text="#" textFill="WHITE">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
    </center>
</BorderPane>
