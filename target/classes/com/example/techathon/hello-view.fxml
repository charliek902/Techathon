<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.techathon.HelloController">
   <children>
      <VBox>
         <children>
            <Pane fx:id="header">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="15.0">
                     <children>
                      <Button mnemonicParsing="false" text="Home" />
                        <Button mnemonicParsing="false" text="Learn" />
                        <Button mnemonicParsing="false" text="Quiz" />
                        <Button mnemonicParsing="false" text="Calculators" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
            </Pane>
            <Pane fx:id="body" style="-fx-background-color: rgb(140,193,193);">
               <children>
                  <VBox alignment="CENTER" fillWidth="false">
                     <children>
                        <Label text="World of Finance" textFill="WHITE">
                           <font>
                              <Font name="Bodoni MT" size="34.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
                     </padding>
                  </VBox>
               </children>
            </Pane>
            <Pane fx:id="footer">
               <children>
                  <HBox alignment="CENTER" fillHeight="false" spacing="20.0" style="-fx-background-color: #6e8d63;">
                     <children>
                        <Label text="Copyright @ WOF 2025" textFill="WHITE" wrapText="true">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </Label>
                        <Label text="WOF is a trademark under the World of Finance group." textFill="WHITE" wrapText="true">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</AnchorPane>
