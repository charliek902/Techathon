<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="app.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.techathon.HelloController">
    <center>
          <VBox alignment="CENTER" fillWidth="false" styleClass="body-style">
              <children>
                  <Label styleClass="home-heading" text="World of Finance">
                      <font>
                          <Font name="Bodoni MT" size="34.0" />
                      </font>
                  </Label>
              </children>
              <padding>
                  <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
              </padding>
          </VBox>
    </center>
    <top>
        <Pane fx:id="header" styleClass="nav-pane" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onHelloButtonClick" styleClass="menu-btn" text="Home" />
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onLearnButtonClick" styleClass="menu-btn" text="Learn" />
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onQuizButtonClick" styleClass="menu-btn" text="Quiz" />
                        <Button mnemonicParsing="false" onAction="#onCalculatorButtonClick" styleClass="menu-btn" text="Calculators" />
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onNotesButtonClick" styleClass="menu-btn" text="Notes" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
            </children>
        </Pane>
    </top>
    <bottom>
        <Pane fx:id="footer" style="-fx-background-color: #6e8d63;" BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="20.0" layoutY="10.0" text="Copyright @ WOF 2025" textFill="WHITE" wrapText="true" />
                <Label layoutX="198.0" layoutY="10.0" text="WOF is a trademark under the FinanceED company." textFill="WHITE" wrapText="true" />
            </children>
        </Pane>
    </bottom>
</BorderPane>
