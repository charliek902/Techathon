<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="app.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.techathon.chooseCalculatorController">
   <top>
      <Pane fx:id="header" BorderPane.alignment="CENTER" styleClass="nav-pane">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#onHelloButtonClick"
                          styleClass="menu-btn" text="Home"/>
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#onLearnButtonClick"
                          styleClass="menu-btn" text="Learn"/>
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#onQuizButtonClick"
                          styleClass="menu-btn" text="Quiz"/>
                  <Button mnemonicParsing="false" onAction="#onCalculatorButtonClick" styleClass="menu-btn"
                          text="Calculators"/>
                  <Button mnemonicParsing="false" text="Notes" styleClass="menu-btn" alignment="CENTER"
                          onAction="#onNotesButtonClick"/>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
               </padding>
            </HBox>
         </children>
      </Pane>
   </top>
   <center>
      <BorderPane>
         <center>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <TilePane alignment="CENTER" hgap="10.0" prefHeight="400.0" prefWidth="600.0" vgap="10.0">
                     <children>
                        <Pane prefHeight="200.0" prefWidth="200.0">
                           <children>
                              <Button mnemonicParsing="false" onMouseClicked="#onISAButtonClick" prefHeight="200.0" prefWidth="200.0" styleClass="choose-ISAcalculator-btn" text="Savings ISA account">
                                 <font>
                                    <Font size="17.0" />
                                 </font>
                              </Button>
                           </children>
                        </Pane>
                        <Pane prefHeight="200.0" prefWidth="200.0">
                           <children>
                              <Button mnemonicParsing="false" onMouseClicked="#onPensionsButtonClick" prefHeight="200.0" prefWidth="200.0" styleClass="choose-Pensioncalculator-btn" text="Pensions">
                                 <font>
                                    <Font size="17.0" />
                                 </font>
                              </Button>
                           </children>
                        </Pane>
                        <Pane layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0">
                           <children>
                              <Button mnemonicParsing="false" onMouseClicked="#onMortgageButtonClick" prefHeight="200.0" prefWidth="200.0" styleClass="choose-Mortgagecalculator-btn" text="Mortgage">
                                 <font>
                                    <Font size="17.0" />
                                 </font>
                              </Button>
                           </children>
                        </Pane>
                        <Pane layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0">
                           <children>
                              <Button mnemonicParsing="false" onMouseClicked="#onBudgetButtonClick" prefHeight="200.0" prefWidth="200.0" text="Budgeting" styleClass="choose-budgetCalculator-btn">
                                 <font>
                                    <Font size="17.0" />
                                 </font>
                              </Button>
                           </children>
                        </Pane>
                        <Pane layoutX="10.0" layoutY="410.0" prefHeight="200.0" prefWidth="200.0">
                           <children>
                              <Button mnemonicParsing="false"  prefHeight="200.0" prefWidth="200.0" text="Button" styleClass="choose-exampleCalculator-btn">
                                 <font>
                                    <Font size="17.0" />
                                 </font>
                              </Button>
                           </children>
                        </Pane>
                        <Pane prefHeight="200.0" prefWidth="200.0">
                           <children>
                              <Button mnemonicParsing="false" prefHeight="200.0" prefWidth="200.0" text="Button" styleClass="choose-exampleCalculator-btn">
                                 <font>
                                    <Font size="17.0" />
                                 </font>
                              </Button>
                           </children>
                        </Pane>
                     </children>
                  </TilePane>
               </children>
            </VBox>
         </center>
         <top>
            <HBox alignment="CENTER">
               <children>
                  <Pane>
                     <children>
                        <Label styleClass="choose-calculator-heading" text="Choose one of our calculators to help you understand your money." textAlignment="RIGHT">
                           <font>
                              <Font size="19.0" />
                           </font>
                           <padding>
                              <Insets bottom="20.0" left="15.0" top="20.0" />
                           </padding>
                        </Label>
                     </children>
                  </Pane>
               </children>
            </HBox>
         </top>
      </BorderPane>
   </center>
</BorderPane>
