<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="app.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.techathon.CalculatorController">
    <top>
        <Pane fx:id="header" BorderPane.alignment="CENTER" styleClass="nav-pane">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onHelloButtonClick"
                                styleClass="menu-btn" text="Home"/>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onLearnButtonClick"
                                styleClass="menu-btn" text="Learn"/>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onQuizButtonClick"
                                styleClass="menu-btn" text="Quiz"/>
                        <Button mnemonicParsing="false" onAction="#onCalculatorButtonClick" styleClass="menu-btn"
                                text="Calculators"/>
                        <Button mnemonicParsing="false" text="Notes" styleClass="menu-btn" alignment="CENTER"
                                onAction="#onNotesButtonClick"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
            </children>
        </Pane>
    </top>
   <center>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" fillWidth="false">
               <children>
                  <Label text="Find your pension when you retire." wrapText="true">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </Label>
                  <Label text="Date of birth" />
                  <HBox spacing="10.0">
                     <children>
                        <TextField prefWidth="50.0" promptText="dd" />
                        <TextField layoutX="10.0" layoutY="10.0" prefWidth="50.0" promptText="mm" />
                        <TextField layoutX="147.0" layoutY="10.0" prefWidth="50.0" promptText="yyyy" />
                     </children>
                  </HBox>
                  <Label layoutX="145.0" layoutY="38.0" text="Salary" />
                  <TextField />
                  <Label layoutX="140.0" layoutY="80.0" text="Monthly Contribution" />
                  <TextField layoutX="81.0" layoutY="97.0" />
                  <Label layoutX="98.0" layoutY="122.0" text="Age to retire at" />
                  <TextField layoutX="81.0" layoutY="139.0" />
               </children>
            </VBox>
            <Region prefHeight="200.0" prefWidth="2.0" style="-fx-background-color: black;" />
            <VBox alignment="CENTER" style="-fx-background-color: grey;">
               <children>
                  <Label text="Estimated Pension Pot" textFill="WHITE" wrapText="true">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </Label>
                  <Label text="#" textFill="WHITE" />
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
</BorderPane>
