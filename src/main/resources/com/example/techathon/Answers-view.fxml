<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.techathon.AnswerViewController">
    <center>
        <Pane fx:id="body" style="-fx-background-color: rgb(140,193,193);">
            <children>
                <VBox alignment="CENTER" fillWidth="false">
                    <children>
                        <Label styleClass="home-heading" text="Answers Page">
                            <font>
                                <Font name="Bodoni MT" size="34.0" />
                            </font>
                        </Label>
                        <Label styleClass="home-heading" text="You got 0 correct!">
                            <font>
                                <Font name="Bodoni MT" size="17.0" />
                            </font>
                        </Label>

                    </children>
                    <padding>
                        <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
                    </padding>
                </VBox>
            </children>
        </Pane>
    </center>
    <top>
        <Pane fx:id="header" BorderPane.alignment="CENTER" styleClass="nav-pane">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onHelloButtonClick"
                                styleClass="menu-btn" text="Home"/>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onLearnButtonClick"
                                styleClass="menu-btn" text="Learn"/>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onQuizButtonClick"
                                styleClass="menu-btn" text="Quiz"/>
                        <Button mnemonicParsing="false" onAction="#onCalculatorButtonClick" styleClass="menu-btn"
                                text="Calculators"/>
                        <Button mnemonicParsing="false" text="Notes" styleClass="menu-btn" alignment="CENTER"
                                onAction="#onNotesButtonClick"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
            </children>
        </Pane>
    </top>
</BorderPane>