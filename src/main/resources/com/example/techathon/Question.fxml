<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.techathon.QuestionViewController">
    <center>
        <Pane fx:id="body" style="-fx-background-color: rgb(140,193,193);">
            <children>
                <VBox alignment="CENTER" fillWidth="false">
                    <children>
                        <Label fx:id="question" text="Question 1 placeholder" style="-fx-font-size: 16px; -fx-text-fill: black;" />


                        <RadioButton fx:id="answer1" text="Answer 1 placeholder" style="-fx-font-size: 16px; -fx-text-fill: black;" />
                        <RadioButton fx:id="answer2" text="Answer 2 placeholder" style="-fx-font-size: 16px; -fx-text-fill: black;" />
                        <RadioButton fx:id="answer3" text="Answer 3 placeholder" style="-fx-font-size: 16px; -fx-text-fill: black;" />
                        <RadioButton fx:id="answer4" text="Answer 4 placeholder" style="-fx-font-size: 16px; -fx-text-fill: black;" />

                        <Button fx:id="nextPageButton" text="Next Page" style="-fx-font-size: 14px; -fx-background-color: lightblue;" onAction="#handleNext" />

                    </children>
                    <padding>
                        <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
                    </padding>
                </VBox>
            </children>
        </Pane>
    </center>
    <top>
        <Pane fx:id="header" BorderPane.alignment="CENTER" styleClass="nav-pane">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onHelloButtonClick"
                                styleClass="menu-btn" text="Home"/>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onLearnButtonClick"
                                styleClass="menu-btn" text="Learn"/>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onQuizButtonClick"
                                styleClass="menu-btn" text="Quiz"/>
                        <Button mnemonicParsing="false" onAction="#onCalculatorButtonClick" styleClass="menu-btn"
                                text="Calculators"/>
                        <Button mnemonicParsing="false" text="Notes" styleClass="menu-btn" alignment="CENTER"
                                onAction="#onNotesButtonClick"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
            </children>
        </Pane>
    </top></BorderPane>