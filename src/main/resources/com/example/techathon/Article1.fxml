<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.image.ImageView?>
<BorderPane stylesheets="app.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.techathon.ArticleController">
    <center>
        <Pane fx:id="body" >
            <children>
                <VBox  >
                    <!-- Title of Article-->
                    <children>

                        <Label styleClass="article-title" text="Loans for young people"  accessibleRoleDescription="Main Title" >
                            <font>
                                <Font name="Bodoni MT" size="34.0" />
                            </font>
                        </Label>


                        <!--Article Image-->
                        <ImageView fitWidth="250.0" fitHeight="250.0" accessibleText="Image of a loan for young people.">
                            <image>
                                <Image  url="https://www.moneysavingexpert.com/content/dam/loan-new-car.jpg.rendition.992.992.jpg"/>
                            </image>
                        </ImageView>
                    </children>

                    <padding>
                        <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
                    </padding>

                    <!-- Article Content-->
                    <VBox spacing="10">
                        <children>
                            <!-- Introduction -->
                            <Label styleClass="article-subheading" text="Whether you're buying your first car or replacing an on-the-blink laptop, a loan may seem like a good way to borrow the funds needed." accessibleText="Introduction to loans for young people."/>

                            <Label styleClass="article-content" text="How old do I have to be to get a loan? " />
                            <Label styleClass="article-content" text="Most lenders will offer a loan to you if you're aged 18 or over, and have a decent credit score and reliable income. " />

                            <Label styleClass="article-content" text="Your options for getting a loan as a young person may be limited, but it is still possible to borrow money if you're over 18 and have a reasonable credit score. " />
                            <Label styleClass="article-content" text="Again, this should only be done after careful consideration." accessibleText="It is important to take careful consideration before taking out a loan."/>
                            <Label styleClass="article-content" text="The most common types of loans available to young people are:" accessibleText="The most common types of loans available to young people are."/>

                            <Label styleClass="article-content" text="• Unsecured personal loans: A loan that you pay back in monthly instalments over a set period of time." />

                            <Label styleClass="article-content" text="• Guarantor loans: Like a personal loan, except a family member or close friend agrees to cover your repayments if you can't." />

                            <Label styleClass="article-content" text="But be warned: we'd caution against these types of loans where possible. They usually come with very high interest rates." />

                        </children>


                    </VBox>

                </VBox>


            </children>
        </Pane>
    </center>

    <top>
        <Pane fx:id="header" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onHelloButtonClick" styleClass="menu-btn" text="Home" />
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onLearnButtonClick" styleClass="menu-btn" text="Learn" />
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onQuizButtonClick" styleClass="menu-btn" text="Quiz" />
                        <Button mnemonicParsing="false" onAction="#onCalculatorButtonClick" styleClass="menu-btn" text="Calculators" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
            </children>
        </Pane>
    </top>
    <bottom>
        <Pane fx:id="footer" style="-fx-background-color: #6e8d63;" BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="20.0" layoutY="10.0" text="Copyright @ WOF 2025" textFill="WHITE" wrapText="true" />
                <Label layoutX="198.0" layoutY="10.0" text="WOF is a trademark under the FinanceED company." textFill="WHITE" wrapText="true" />
            </children>
        </Pane>
    </bottom>
</BorderPane>

