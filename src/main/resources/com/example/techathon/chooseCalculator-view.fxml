<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.techathon.CalculatorController">
   <center>
      <BorderPane>
         <center>
            <TilePane prefHeight="400.0" prefWidth="600.0">
               <children>
                  <Pane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" prefHeight="200.0" prefWidth="200.0" text="Savings ISA account" onMouseClicked="#onISAButtonClick"/>
                     </children>
                  </Pane>
                  <Pane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" prefHeight="200.0" prefWidth="200.0" text="Pensions" onMouseClicked="#onPensionsButtonClick"/>
                     </children>
                  </Pane>
                  <Pane layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" prefHeight="200.0" prefWidth="200.0" text="Mortgage" onMouseClicked="#onMortgageButtonClick"/>
                     </children>
                  </Pane>
                  <Pane layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" prefHeight="200.0" prefWidth="200.0" text="Button" />
                     </children>
                  </Pane>
                  <Pane layoutX="10.0" layoutY="410.0" prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" prefHeight="200.0" prefWidth="200.0" text="Button" />
                     </children>
                  </Pane>
                  <Pane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" prefHeight="200.0" prefWidth="200.0" text="Button" />
                     </children>
                  </Pane>
               </children>
            </TilePane>
         </center>
         <top>
            <Pane BorderPane.alignment="CENTER">
               <children>
                  <Label text="Choose one of our calculators to help you understand your money.">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
         </top>
      </BorderPane>
   </center>
</BorderPane>
